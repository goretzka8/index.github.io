<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background5"
    tools:context=".SubmitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.请选择对应的无人机型号："
                android:textSize="20sp"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <RadioGroup
                android:id="@+id/rg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无人机1号"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无人机2号"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无人机3号"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </RadioGroup>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:padding="0dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/uav_1"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/uav_2"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/uav_3"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.请输入用户名："
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/submit_et_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="用户名"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.请输入用户性别："
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/submit_et_5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="性别"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.请输入用户年龄："
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/submit_et_6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="年龄"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.请输入对应无人机的经纬度："
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/submit_et_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="经度"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                />

            <EditText
                android:id="@+id/submit_et_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:hint="纬度"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_username"
                />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/under_line"
                android:layout_marginTop="5dp"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="地址："
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/et_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <Button
                    android:id="@+id/btn_L2S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="坐标 -> 地址"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    />
                <Button
                    android:id="@+id/btn_S2L"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址 -> 坐标"
                    android:textColor="@color/black"
                    android:layout_marginLeft="25dp"
                    />
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.请输入对应无人机的高度："
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/submit_et_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="高度"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/bg_username"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始传输"
                android:textColor="@color/black"
                android:layout_marginLeft="60dp"
                />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止传输"
                android:textColor="@color/black"
                android:layout_marginLeft="45dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.提交图片："
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_takephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="拍照"/>

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <!--            <Button-->
            <!--                android:id="@+id/chose_photo"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:text="从相册中选取"/>-->

        </LinearLayout>

        <Button
            android:id="@+id/submit_all"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="提交"/>
    </LinearLayout>
</ScrollView>